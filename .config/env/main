#!/bin/sh
# MAIN

export BROWSER="google-chrome-stable"
export EDITOR="nvim"
export HISTSIZE=404
export MANPAGER="nvim -c 'set ft=man' -"
export PAGER="page -q 90000"
export TERMINAL="st"

export CONF=${XDG_CONFIG_HOME:-$HOME/.config}
export SOURCE="$HOME/source"
export SCRIPTS="$SOURCE/scripts"
export CSCRDIR="$XDG_CACHE_HOME/cscripts"
export SUDO_ASKPASS="$SCRIPTS/sh/dmenu/dmenu_askpass"
export S2D=1
