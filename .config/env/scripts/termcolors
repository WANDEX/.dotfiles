#!/bin/sh
# source terminal colors for global use in my scripts
# example:
# printf "%s\n" "Text in ${RED}red${END}, white and ${BLU}blue${END}."

# foreground colors
export END="\033[0m"
export RED="\033[1;31m"
export GRN="\033[1;32m"
export YEL="\033[1;33m"
export BLU="\033[1;34m"
export MAG="\033[1;35m"
export CYN="\033[1;36m"

# use color & swap background and foreground colors
export DEF_S="\033[1;7m"
export RED_S="\033[1;41m"
export GRN_S="\033[1;42m"
export YEL_S="\033[1;43m"
export BLU_S="\033[1;44m"
export MAG_S="\033[1;45m"
export CYN_S="\033[1;46m"

# BOLD, ITALIC, UNDERLINE
export BLD="\033[1m"
export ITQ="\033[3m"
export UND="\033[4m"
