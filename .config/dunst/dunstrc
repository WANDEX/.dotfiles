[global]
    ### Display ###

    # Which monitor should the notifications be displayed on.
    monitor = 0

    # Display notification on focused monitor.  Possible modes are:
    #   mouse: follow mouse pointer
    #   keyboard: follow window with keyboard focus
    #   none: don't follow anything
    follow = none

    width = (0, 1916)

    origin = top-right
    offset = 2x17

    # Show how many messages are currently hidden (because of geometry).
    indicate_hidden = true

    # The transparency of the window.  Range: [0; 100].
    # This option will only work if a compositing window manager is
    # present (e.g. xcompmgr, compiz, etc.).
    transparency = 0

    # Draw a line of "separator_height" pixel height between two
    # notifications.
    # Set to 0 to disable.
    separator_height = 5

    # Padding between text and separator.
    padding = 8

    # Horizontal padding.
    horizontal_padding = 8

    # Defines width in pixels of frame around the notification window.
    # Set to 0 to disable.
    frame_width = 0

    # Defines color of the frame around the notification window.
    frame_color = "#aaaaaa"

    separator_color = auto

    # Sort messages by urgency.
    sort = false

    # Don't timeout notifications if user is idle longer than this time.
    idle_threshold = 120

    font = Monospace 8

    markup = full

    format = "%p<b>%s</b> %b"

    # Alignment of message text.
    # Possible values are "left", "center" and "right".
    alignment = left

    # Vertical alignment of message text and icon.
    # Possible values are "top", "center" and "bottom".
    vertical_alignment = center

    # Show age of message if message is older than show_age_threshold seconds.
    # Set to -1 to disable.
    show_age_threshold = 300

    # wrap the text if the lines get longer than the maximum notification width.
    word_wrap = false

    # Ignore newlines '\n' in notifications.
    ignore_newline = false

    # Stack together notifications with the same content
    stack_duplicates = true

    # Hide the count of stacked notifications with the same content
    hide_duplicate_count = false

    # Display indicators for URLs (U) and actions (A).
    show_indicators = true

    ### Icons ###

    # Align icons left/right/off
    icon_position= off

    # Scale small icons up to this size, set to 0 to disable. Helpful
    # for e.g. small files or high-dpi screens. In case of conflict,
    # max_icon_size takes precedence over this.
    min_icon_size = 0

    # Scale larger icons down to this size, set to 0 to disable
    max_icon_size = 32

    # Paths to default icons.
    # icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    ### History ###

    # Should a notification popped up from history be sticky or timeout
    # as if it would normally do.
    sticky_history = true

    # Maximum amount of notifications kept in history
    history_length = 20

    ### Misc/Advanced ###

    # dmenu path.
    dmenu = /usr/local/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    #browser = /usr/bin/firefox -new-tab
    #browser = /usr/bin/google-chrome-stable
    browser = ~/source/scripts/sh/tool/clipargs

    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true

    # Define the title of the windows spawned by dunst
    title = Dunst

    # Define the class of the windows spawned by dunst
    class = Dunst

    # Define the corner radius in pixels.
    # A corner radius of 0 will result in rectangular shaped notifications.
    corner_radius = 0

    # Ignore the dbus closeNotification message.
    # Useful to enforce the timeout set by dunst configuration. Without this
    # parameter, an application may close the notification sent before the
    # user defined timeout.
    ignore_dbusclose = false

    ### mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, open_url
    mouse_right_click = open_url

[urgency_low]
    history_ignore = true
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#AA3131"
    foreground = "#ffffff"
    timeout = 10

[pomodoro]
    summary = "*\[pomodoro\]*"
    set_stack_tag = "pomodoro"
    history_ignore = true
    background = "#AA3131"
    foreground = "#EFEFF1"
    timeout = 3

[youtube]
    body = "*http*youtu*"
    background = "#CD919A"
    foreground = "#000000"

[stream]
    summary = "*\[stream\]*"
    background = "#32393A"
    foreground = "#EFEFF1"
    timeout = 3

[twitch]
    body = "*twitch.tv*"
    background = "#9147FF"
    foreground = "#EFEFF1"
    timeout = 10

[twitch-stream-started]
    summary = "*live*"
    body = "*twitch*"
    skip_display = true # -> hide original notification
    history_ignore = true
    script = dunst_twitch.sh

[goodgame-stream-started]
    body = "*>goodgame.ru<*"
    skip_display = true # -> hide original notification
    history_ignore = true
    script = dunst_goodgame.sh

[strend]
    summary = "*\[stream\]\[end\]*"
    background = "#9A6D50"
    foreground = "#EFEFF1"
    timeout = 10

[DOWNLOAD_STARTED]
    summary = "*\[DOWNLOAD\]*\[STARTED\]*"
    script = dunst_download_started.sh

[DOWNLOAD_COMPLETED]
    summary = "*\[DOWNLOAD\]*\[COMPLETED\]*\(*\)*"
    skip_display = true # -> hide original notification
    history_ignore = true
    script = dunst_download_completed.sh

[DOWNLOAD_PROGRESS]
    summary = "*\[D\]*"
    history_ignore = true
    background = "#32393A88"
    foreground = "#EFEFF1"

[ENCODE]
    summary = "*\[ENCODEME\]*"
    skip_display = true # -> hide original notification
    history_ignore = true
    script = dunst_encode.sh

[web-scrobbler]
    body = "*SoundCloud*"
    skip_display = true # -> hide original notification
    history_ignore = true
    script = dunst_web_scrobbler.sh

[discard]
    body = "*This site has been updated in the background.*"
    skip_display = true # -> hide original notification
    history_ignore = true

[chess]
    body = "*www.chess.com*"
    set_stack_tag = "chess"
    background = "#32393A"
    format = "â™Ÿ %s"
    timeout = 0

[clip]
    summary = "ðŸ“‹*"
    history_ignore = true
    set_stack_tag = "clip"

[history-ignore]
    stack_tag = "hi" # match this stack_tag
    history_ignore = true

# AT THE VERY END TO OVERRIDE ANY PREVIOUSLY DEFINED RULES

[warning]
    summary = "*warning*"
    background = "#F4BF75"
    foreground = "#1A1A1A"

[WARNING]
    summary = "*WARNING*"
    background = "#F4BF75"
    foreground = "#1A1A1A"

[error]
    summary = "*error*"
    background = "#FF6188"
    foreground = "#1A1A1A"

[ERROR]
    summary = "*ERROR*"
    background = "#FF6188"
    foreground = "#1A1A1A"

