" unmap all mappings
unmapAll
iunmapAll

" Settings
set nohud
set noautofocus
set typelinkhints
let searchlimit = 30
set nosmoothscroll
let scrollduration = 500
let scrollstep = 30
let barposition = "bottom"
set ignorecase
set smartcase
set incsearch
set changelog
set scalehints
let activehighlight = '#2B2B2B'
let highlight = '#252525'
let defaultengine = "google"
let searchalias g = "google"

let mapleader = ","

" Miscellaneous
map . repeatCommand
map : openCommandBar
map / openSearchBar
map ? openSearchBarReverse
map r reloadTab
map k insertMode
map v toggleVisualMode
map V toggleVisualLineMode
" Miscellaneous

" Movement
map n scrollDown
map e scrollUp


map H scrollLeft
map I scrollRight

map gg scrollToTop
map G scrollToBottom

map 0 scrollToLeft
map $ scrollToRight
"?
