# autorun script that executes startup programs
#exec --no-startup-id arun.sh

# set keyboard layout
exec --no-startup-id setxkbmap -model pc104 -layout us,ru -variant colemak,  -option grp:caps_toggle,grp_led:scroll

# disable display power manager signaling and monitor standby
exec --no-startup-id xset -dpms && xset s off

# keyboard delay and rate for X. for tty there is "kbdrate -r -d"
exec --no-startup-id xset r rate 200 50

# unclutter makes the mouse invisible after a brief period
exec --no-startup-id unclutter

# proxychains curl http://icanhazip.com | also for checking: ss -tupln
exec --no-startup-id nohup tor &

# mopidy includes scrobbler and other plugins
exec --no-startup-id nohup mopidy &

# mpd & mpdscribble
exec --no-startup-id mpd ~/.config/mpd/mpd.conf
exec --no-startup-id mpdscribble --conf ~/.config/mpdscribble/mpdscribble.conf

# set background wallpaper
exec --no-startup-id sleep 5 && setbg.sh

# load/reload resource file every i3 restart
exec_always --no-startup-id xrdb ~/.Xresources

# set wal color scheme
#exec_always --no-startup-id "wal -R"

# run compton for transparancy support
