# *** BASIC DEFINITIONS ***
#
# need for i3-gaps
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 0
set $term --no-startup-id $TERMINAL
set $mod Mod4
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager

# hardcoded because this does not work #set $output0 $OUT0/set $output1 $OUT1
# left monitor
set $output0 "HDMI-0"
# right monitor
set $output1 "DVI-D-0"
#
# *** END ***


# *** Starting External Scripts ***
#
# chmod 755 "filepath" for right permissions? or chmod +x "filepath"?

# run monitors configuration script on startup
## for nouveau drivers
#exec --no-startup-id sleep 2 && arun_xrandr.sh
## for nvidia drivers
exec --no-startup-id sleep 2 && arun_nvidia.sh

# autorun script that executes startup programs
exec --no-startup-id arun.sh

exec_always --no-startup-id xinput disable 'Video Bus'

# set keyboard layout
exec --no-startup-id setxkbmap -model pc104 -layout us,ru -variant colemak,  -option grp:caps_toggle,grp_led:scroll

# disable display power manager signaling and monitor standby
exec_always --no-startup-id xset -dpms && xset s off

# keyboard delay and rate for X. for tty there is "kbdrate -r -d"
exec_always --no-startup-id xset r rate 200 50

# unclutter makes the mouse invisible after a brief period
exec --no-startup-id unclutter

# mpd & mpdscribble
exec --no-startup-id mpd ~/.config/mpd/mpd.conf && \
                     mpdscribble --conf ~/.config/mpdscribble/mpdscribble.conf

# set background wallpaper
exec --no-startup-id sleep 5 && setbg.sh

# load/reload resource file every i3 restart
exec_always --no-startup-id xrdb ~/.Xresources

# set wal color scheme
#exec_always --no-startup-id "wal -R"

# run compton for transparancy support
exec --no-startup-id compton --config ~/.config/compton/compton.conf

exec --no-startup-id conky -d
#
# *** END ***


