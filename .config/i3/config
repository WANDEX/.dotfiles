mode "resize" {
    # These bindings trigger as soon as you enter the resize mode
    bindsym h resize grow width 10 px or 10 ppt
    bindsym n resize shrink height 10 px or 10 ppt
    bindsym e resize grow height 10 px or 10 ppt
    bindsym i resize shrink width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize grow width 10 px or 10 ppt
    bindsym Down resize shrink height 10 px or 10 ppt
    bindsym Up resize grow height 10 px or 10 ppt
    bindsym Right resize shrink width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+w mode "resize"


# *** Custom Keyboard Shortcuts ***
#
# monitor configuration script hotkey
bindsym $mod+Shift+m exec --no-startup-id arun_xrandr.sh

# launch browser
bindsym $mod+g exec --no-startup-id google-chrome-stable
bindsym $mod+Shift+g exec --no-startup-id google-chrome-stable -incognito

# toggle monitor mute on/off
bindsym $mod+m exec --no-startup-id \
pactl set-sink-mute alsa_output.pci-0000_01_00.1.hdmi-stereo-extra1 toggle

# move workspaces between monitors/outputs
bindsym $mod+Control+1 move workspace to output $output0
bindsym $mod+Control+2 move workspace to output $output1

# exec ranger
bindsym $mod+Shift+Return exec --no-startup-id $term -e ranger

bindsym $mod+Shift+k exec --no-startup-id \
$term -e ncmpcpp --config ~/.config/ncmpcpp/config

# For screenshots: selection, window, window with imagemagick processing
bindsym Print       exec --no-startup-id maim -u -s \
| xclip -selection clipboard -t image/png

bindsym Shift+Print exec --no-startup-id maim -i $(xdotool getactivewindow) -u\
| xclip -selection clipboard -t image/png

bindsym $mod+Print  exec --no-startup-id maim -i $(xdotool getactivewindow) -u\
| convert - \( +clone -background black -shadow 100x3+0+0 \) \
+swap -background none -layers merge \
+repage ~/Downloads/Pictures/shadow.png && \
xclip -selection clipboard -t image/png -i ~/Downloads/Pictures/shadow.png \

bindsym $mod+Shift+Print exec --no-startup-id com.github.ronnydo.colorpicker
