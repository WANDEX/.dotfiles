### KEYBINDINGS

#bind <g> <home>
#bind <G> <end>
#bind <h> <left>
bind <i> <right>
bind <n> <down>
bind <e> <up>
bind <N> <pgdn>
bind <E> <pgup>
#bind --context tabs H tab --move left
bind  --context tabs I tab --move right

bind <alt-n> find --next
bind <alt-e> find --previous

bind --description "Show details about torrent of focused tracker in new tab" \
    --context torrent "<t> <I>" tab details
bind --description "List files of torrent of focused tracker in a new tab" \
    --context torrent "<t> <f>" tab filelist

bind --description "Increase global download rate limit by 500 kilobytes" \
     --context main <]> rate --quiet dn -- +=500kB global
bind --description "Decrease global download rate limit by 500 kilobytes" \
     --context main <[> rate --quiet dn -- -=500kB global
bind --description "Increase global upload rate limit by 500 kilobytes" \
     --context main <alt-]> rate --quiet up -- +=500kB global
bind --description "Decrease global upload rate limit by 500 kilobytes" \
     --context main <alt-[> rate --quiet up -- -=500kB global

